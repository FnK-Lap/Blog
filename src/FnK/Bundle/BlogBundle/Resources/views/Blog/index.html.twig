{% extends 'FnKBlogBundle::Layout/layout.html.twig' %}

{% block title %} - Posts{% endblock %}

{% block content %}
    <a href="{{path('blog_post_new')}}">Nouveau post</a>
    <a href="{{path('blog_category_new')}}">Nouvelle categorie</a>
    <a href="{{path('blog_search')}}">Recherche</a>
    {% for post in posts %}
        <div>
            <h3>{{post.title}}</h3>
            <p>{{post.category.name}}</p>
            <p>{{post.body}}</p>
        </div>
        <hr>
    {% endfor %}
{% endblock %}